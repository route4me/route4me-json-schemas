{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://github.com/route4me/json-schemas/blob/master/note.dtd",
	"type": "object",
	"title": "note",
	"properties": {
		"note_id": {
			"type": "integer",
			"name": "note_id",
			"title": "Note ID",
			"description": "the id of the note in the system"
		},
		"route_id": {
			"type": "string",
			"name": "route_id",
			"title": "Route ID",
			"description": "Route ID"
		},
		"route_destination_id": {
			"type": "integer",
			"name": "route_destination_id",
			"title": "Route Destination ID",
			"description": "Route Destination ID"
		},
		"upload_id": {
			"type": "string",
			"name": "upload_id",
			"title": "Upload ID",
			"description": "The unique and randomly generated ID of the file attachment that is associated with this note"
		},
		"ts_added": {
			"type": "integer",
			"name": "ts_added",
			"title": "TS Added",
			"description": "The unix timestamp when the note was added"
		},
		"lat": {
			"type": "number",
			"minimum": -90,
			"maximum": 90,
			"name": "lat",
			"title": "Latitude",
			"description": "Latitude"
		},
		"lng": {
			"type": "number",
			"minimum": -180,
			"maximum": 180,
			"name": "lng",
			"title": "Longitude",
			"description": "Longitude"
		},
		"activity_type": {
			"type": "string",
			"name": "activity_type",
			"title": "Activity Type",
			"description": "Activity Type"
		},
		"contents": {
			"type": "string",
			"name": "contents",
			"title": "Contents",
			"description": "Contents"
		},
		"upload_type": {
			"type": "string",
			"enum": [
				"DRIVER_IMG",
				"VEHICLE_IMG",
				"ADDRESS_IMG",
				"CSV_FILE",
				"XLS_FILE",
				"ANY_FILE"
			],
			"name": "upload_type",
			"title": "Upload Type",
			"description": "Upload Type"
		},
		"upload_url": {
			"type": "string",
			"name": "upload_url",
			"title": "Upload url",
			"description": "The direct CDN URL of the attachment uploaded with a note"
		},
		"upload_extension": {
			"type": "string",
			"name": "upload_extension",
			"title": "Upload Extension",
			"description": "The extension of the attachment ('pdf', 'csv' etc)"
		},
		"device_type": {
			"type": "string",
			"name": "device_type",
			"title": "Device Type",
			"description": "Device type ('web', 'phone', 'ipad', 'android phone', 'android tablet' etc)"
		}
	},
	"required": [
		"route_destination_id"
	]
}