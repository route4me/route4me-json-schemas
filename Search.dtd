{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://github.com/route4me/json-schemas/blob/master/Search.dtd",
	"type": "object",
	"name": "Search",
	"title": "Search",
	"properties": {
		"api_key": {
			"type": "string",
			"name": "api_key",
			"title": "API Key",
			"description": "api_key"
		},
		"device_id": {
			"type": "string",
			"name": "device_id",
			"title": "Device ID",
			"description": "Device id"
		},
		"query": {
			"type": "string",
			"name": "query",
			"title": "Query",
			"description": "Query"
		},
		"type": {
			"type": "string",
			"enum": [
				"routes",
				"addresses",
				"notes",
				"address_book"
			],
			"name": "type",
			"title": "Search Type",
			"description": "Type of search: 'routes' - Search in routes index, 'addresses' - Search in routes_data index, 'notes' - Search in notes index, 'address_book' - Search in address book index"
		},
		"limit": {
			"type": "integer",
			"default": 10,
			"name": "limit",
			"title": "Limit",
			"description": "Limit of displayed found items"
		},
		"offset": {
			"type": "integer",
			"default": 0,
			"name": "offset",
			"title": "Offset",
			"description": "Offest of start item index searched for"
		}
	},
	"required": [
		"query",
		"type"
	]
}